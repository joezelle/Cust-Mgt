@model CustomerMgt.MVC.Models.CustomerModel

<h2>Delete Customer</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h5>First Name: @Model.FirstName</h5>
        <h5>Last Name: @Model.LastName</h5>
        <h5>Email: @Model.Email</h5>
        <h5>Phone Number: @Model.Address</h5>
        <h5>Phone Number: @Model.PhoneNumber</h5>

    </div>
    <form asp-action="DeleteCustomer" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
